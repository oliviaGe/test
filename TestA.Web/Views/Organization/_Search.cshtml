@using TestA.Web.HtmlExtensions
@using TestA.Web.Models

@model SearchModel
<div class="search-container">
    @using (Html.BeginForm("Search", "Organization", FormMethod.Post, new {data_ajax = "true", data_ajax_method = "POST", data_ajax_mode = "replace", data_ajax_update = "#Organization_DataList", name = "Organization_Search", id = "Organization_Search"}))
    {
        @Html.AntiForgeryToken()
        @Html.TextBoxFor(m => m.Name, new {@class = "form-control", placeholder ="Name"})
        @Html.HiddenFor(m => m.Pager.PageSize)

        <input class="m_btn" type="submit" value="Search"/>
    }
</div>

